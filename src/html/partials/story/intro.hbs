<div class='intro'>
	<p class='intro__byline'>
		<a href='{{meta.author.url}}' target='_blank'>
			<strong>{{meta.author.name}}</strong>
		</a>
		<time>December 2018</time>
	</p>
	<h1 class='intro__hed'>{{{doc.hed}}}</h1>
	<div class='intro__prelude'>
		{{#each doc.prelude}}
			<p>{{{value}}}</p>
		{{/each}}
	</div>
</div>