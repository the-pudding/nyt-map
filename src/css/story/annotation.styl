#timeline .g-annotation
	text
		fill $fg
		set-type-size(small)
	.note-line
		display none
	.annotation-connector--bg
		.connector
			stroke $fg
			stroke-width 4px
		.connector-end
			stroke-width 4px
			fill $fg
			stroke $fg
	.annotation-connector--fg
		.connector
			stroke $bg
			stroke-width 2px
		.connector-end
			stroke-width 2px
			fill $bg
			stroke $bg