#timeline .g-annotation
	.annotation-note-bg
		cursor pointer
		pointer-events auto
	text
		fill $fg
		font-weight 600
		set-type-size(small)
	
	.note-line
		display none
	
	.annotation-connector
		opacity 0
		.connector
			stroke $fg
			stroke-width 2px
		.connector-end
			stroke-width 2px
			fill $fg
			stroke $fg
		&.is-visible
			opacity 1
		
