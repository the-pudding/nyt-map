#timeline
	display flex
	flex-wrap wrap
	justify-content center
	flex-direction column
	// background $beige-dark
	.year
		position relative
		margin 0 auto
		font-weight 700
		width 85%
		max-width 50rem
		transform translateX(1rem)
		+mq('bp-5')
			transform none
		
	.year:first-of-type li .month
		display block

	.title
		text-align center
		position absolute
		bottom 0
		left 0
		transform translate(-125%, 4px)
		margin 0
		font-size 12px
		line-height 48px
	ul
		display flex
		justify-content center
		margin 0 auto
	li
		display flex
		flex-direction column
		text-align center
		line-height 1
		position relative
		cursor pointer
		.month
			display none
			text-transform uppercase
			margin-bottom 0.5rem
			set-type-size(xxx-small, false)
			+mq('bp-3')
				set-type-size(xx-small, false)
		.flag
			display inline-block
			line-height 1
			// transition 100ms ease-in-out
			// margin 4px
			img
				border 1px solid $fg
				// box-shadow 0 0 2px $fg
		.name
			line-height 1
			set-type-size(root, false)
			letter-spacing 0.025em
			color $gray-dark
			font-weight 700
			position absolute
			top 100%
			left 50%
			display none
			pointer-events none
			width 6rem
			background-color $fg
			color $bg
			font-weight 700
			z-index set-index(overlay)
			padding 0.5rem 0
			transform translate(-50%, 1.5rem)


		&:hover
			.name
				display block
			.flag
				box-shadow 0px 0px 8px $fg
				transform scale(1.5)
				z-index set-index(overlay)
				pointer-events none

	.timeline__headline
		top 5rem
		left 1rem
		p
			margin 0
			font-weight 700
	
	.timeline__annotation
		top 5rem
		right 1rem
		p
			margin 0
			text-align right
			font-weight 700
		li
			text-align right
			font-weight 700
			color $beige-text
			set-type-size(small, true)