.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__hed
		max-width $column-width
		margin 0 auto
		padding-top 1rem
		font-weight 700
		color $fg
		// text-align center
		span
			vertical-align middle
			font-size 1.75em
		set-type-size('xx-large', true)
		+mq('bp-3')
			font-size 54px
			
	
	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 3rem
		// text-align center
		set-type-size('small', true)
		font-weight 500
		display flex
		justify-content space-between
		border-bottom 1px dashed $fg
		a
			border none
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 0.5rem
		text-align center
		set-type-size('xxx-large')
		font-weight 500
		strong
			font-weight 700

	&__prelude
		max-width $column-width
		margin 0 auto
		p
			text-align justify
			font-size 20px
		strong
			font-family $sans
			font-weight 900
			border-bottom 3px solid $primary