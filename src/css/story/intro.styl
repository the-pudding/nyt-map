.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__hed
		// max-width $column-width
		margin 0 auto
		padding-top 5rem
		font-weight 900
		text-align center
		color $primary
		span
			vertical-align middle
			font-size 1.75em
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			set-type-size('xxxx-large', true)
	
	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 3rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)
		font-weight 500
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 0rem
		text-align center
		font-size 22px
		font-weight 500
		strong
			font-weight 700

	&__prelude
		max-width $column-width
		margin 0 auto
		set-type-size('medium', true)
		text-align justify
		font-weight 500
		strong
			font-family $sans
			font-weight 700
			border-bottom 2px solid $primary