#globe
	position relative
	.globe__current
		text-align center
		margin 0
	
	.current__flag
		font-size 2em
		vertical-align middle

	.globe__svg
		display block
		margin 0 auto
		.graticule
			fill none
			stroke $gray-light
			stroke-dasharray 4px 4px
			display none

		.land
			fill $gray-light

		.outline
			fill none
			stroke $gray
			stroke-width 2px
			display none

		.sphere
			fill $beige-dark

		.country
			fill lighten($beige-dark, 15)
			transition fill 1000ms ease-in-out
			stroke $off-white
			stroke-width 0.5px
			stroke-opacity 0.5
			&.is-active
				fill $secondary

	.globe__headline
		position absolute
		top 1rem
		left 1rem
		p
			margin 0
	
	.globe__subregion
		position absolute
		top 1rem
		right 1rem
		p
			margin 0
		

	.globe__slider
		max-width 30rem
		margin 0 auto