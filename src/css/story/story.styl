/* CUSTOM STORY STYLE */
body
	font-weight 500

section
	margin-bottom 5rem

.section__intro
	margin-bottom 3rem
	h2
		text-align center
		line-height 1
		font-weight 700
		set-type-size(xx-large, false)
		text-transform capitalize
	
.section__content
	position relative
	.sticky
		position sticky

#outro
	max-width $column-width
	margin 0 auto
	p
		set-type-size(small, true)